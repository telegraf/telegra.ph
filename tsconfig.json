{
  "compilerOptions": {
    "strict": true,
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "outDir": "./dist",
    "importsNotUsedAsValues": "remove"
  },
  "include": ["src/**/*"]
}
